{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "scripts/*.ts"
  ],
  "exclude": ["vite.config.*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],
    "outDir": "dist"
  }
}
